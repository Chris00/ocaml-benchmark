#!/bin/bash

# Upload a tarball to sourceforge
SCRIPT_DIR=`dirname $0`

source $SCRIPT_DIR/tarball_name

if [ ! -f "$PKG_TARBALL" ]; then
    $SCRIPT_DIR/tarball
    $DELETE_TARBALL="yes"
fi

echo -e "cd uploads\nput $PKG_TARBALL" | sftp frs.sourceforge.net \
    && echo "*** Uploaded $PKG_TARBALL to SF"

if [ x"$DELETE_TARBALL" = x"yes" ]; then
    /bin/rm "$PKG_TARBALL"
fi
